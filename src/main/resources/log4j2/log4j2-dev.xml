<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Properties>
        <Property name="LOG_PATH">logs</Property>
        <Property name="DEFAULT_PATTERN">[%d{yyyy-MM-dd HH:mm:ss.SSS}] %5p ${sys:PID} --- [%15.15t] %-40.40c{1.} : %m%n%xwEx</Property>
        <Property name="COLOR_PATTERN">[%clr{%d{yyyy-MM-dd HH:mm:ss.SSS}}{faint}] %clr{%5p} %clr{${sys:PID}}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c}{cyan} %clr{:}{faint} %m%n%xwEx</Property>
    </Properties>

    <Appenders>
        <!-- 콘솔 -->
        <Console name="ConsoleAppender" target="SYSTEM_OUT" follow="true">
            <PatternLayout pattern="${COLOR_PATTERN}"/>
        </Console>

        <!-- 일반 로그: 현재 log.log, 자정마다 log_yyyy-MM-dd.log 로 롤오버 -->
        <RollingFile name="RollingFileAppender"
                     fileName="${LOG_PATH}/log.log"
                     filePattern="${LOG_PATH}/log_%d{yyyy-MM-dd}.log"
                     append="true">
            <PatternLayout>
                <Pattern>${DEFAULT_PATTERN}</Pattern>
            </PatternLayout>
            <Policies>
                <!-- 매일 자정 기준 롤오버 -->
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy/>
        </RollingFile>

        <!-- 에러 로그: 현재 log_error.log, 자정마다 log_error_yyyy-MM-dd.log -->
        <RollingFile name="RollingFileErrorAppender"
                     fileName="${LOG_PATH}/log_error.log"
                     filePattern="${LOG_PATH}/log_error_%d{yyyy-MM-dd}.log"
                     append="true">
            <PatternLayout>
                <Pattern>${DEFAULT_PATTERN}</Pattern>
            </PatternLayout>
            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="INFO" additivity="false">
            <AppenderRef ref="ConsoleAppender"/>
            <AppenderRef ref="RollingFileAppender"/>
            <AppenderRef ref="RollingFileErrorAppender"/>
        </Root>
    </Loggers>
</Configuration>
